<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_bg_top"
            android:elevation="2dp"
            android:fontFamily="@font/nexa_regular"
            android:paddingStart="25dp"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:text="@string/session1_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/focusTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey_card"
            android:elevation="2dp"
            android:fontFamily="@font/nexa_light"
            android:text="Length: "
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingBottom="7dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type" />

        <TextView
            android:id="@+id/focusTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey_card"
            android:elevation="2dp"
            android:fontFamily="@font/nexa_light"
            android:text="-"
            android:paddingStart="25dp"
            android:paddingBottom="7dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/focusTimeText" />

        <TextView
            android:id="@+id/intervalsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey_card"
            android:elevation="2dp"
            android:fontFamily="@font/nexa_light"
            android:text="Intervals:"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingBottom="7dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/focusTime" />

        <TextView
            android:id="@+id/intervals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/card_bg_bottom"
            android:elevation="2dp"
            android:fontFamily="@font/nexa_light"
            android:text="-"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingBottom="7dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intervalsText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

