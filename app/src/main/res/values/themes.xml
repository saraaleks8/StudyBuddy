<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_bg</item>
        <item name="colorPrimaryVariant">@color/grey_card</item>
        <item name="colorOnPrimary">@color/grey_text</item>

        <!-- Bottom menu color. -->
        <item name="colorSurface">@color/grey_text_hint</item>
<!--        <item name="colorOnSurface">@color/grey_icon</item>-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_icon</item>
        <item name="colorSecondaryVariant">@color/grey_icon</item>
        <item name="colorOnSecondary">@color/black_bg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:textColorHint" tools:targetApi="l">?attr/colorSurface</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>